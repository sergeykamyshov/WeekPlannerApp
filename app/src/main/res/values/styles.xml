<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="WeekCardTitle">
        <item name="android:textColor">@color/week_card_title_text_color</item>
        <item name="android:textSize">@dimen/week_card_title_text_size</item>
    </style>

    <style name="WeekCardTask">
        <item name="android:textColor">@color/week_card_task_text_color</item>
        <item name="android:textSize">@dimen/week_card_task_text_size</item>
    </style>

    <style name="CardTask">
        <item name="android:textColor">@color/card_task_text_color</item>
        <item name="android:textSize">@dimen/card_task_text_size</item>
    </style>
</resources>
